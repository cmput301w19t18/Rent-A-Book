<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/black"/>
            <stroke
                android:color="@color/pastelPink"
                android:width="5dp"/>
            <size
                android:height="125dp"
                android:width="125dp"/>
        </shape>
    </item>
</selector>